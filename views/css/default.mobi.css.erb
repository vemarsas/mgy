.error {
  border: 1px red solid;
}

.warn {
  border: 1px yellow solid;
}

.info {
  border: 1px green solid;
}

div#header, div#main {
  width: 100%;
}

div#navbar {
  margin: 1.3em 0 1em 0;
}

#status {
  font-style: italic;
}

div.error, div.warn, div.info {
  margin: 1em 0 1em 0;
}

div#navbar span.info, div.info {
  padding: 0.2em 0.4em 0.2em 0.1em;
}

div.error code {
  font-size: 110%;
}

.optinfo {
  font-weight: normal;
  font-style: italic;
}

div.input-container {
  padding: 0.1em 0;
}

th, td {
  background: #ddd;
}

th[scope="row"] {
  text-align: left;
}
